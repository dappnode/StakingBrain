{
  "name": "@stakingbrain/brain",
  "type": "module",
  "version": "0.1.0",
  "license": "GPL-3.0",
  "main": "dist/index.js",
  "scripts": {
    "test": "yarn run test:unit",
    "test:unit": "mocha --exit --recursive 'test/**/*.unit.test.ts'",
    "dev": "yarn run link:ui && node --import tsx/esm src/index.ts",
    "link:ui": "ln -s ../ui/build/ ./uiBuild",
    "build": "yarn run clean:dist && yarn run clean:ln && tsc -p tsconfig.json",
    "clean": "yarn run clean:dist && yarn run clean:modules",
    "clean:modules": "rimraf ./node_modules",
    "clean:dist": "rimraf ./dist",
    "clean:ln": "rimraf ./uiBuild"
  },
  "dependencies": {
    "@stakingbrain/common": "workspace:^0.1.0",
    "ajv": "^8.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "lodash-es": "^4.17.21",
    "lowdb": "^5.0.5",
    "socket.io": "^4.5.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/lodash-es": "^4.17.12",
    "@types/lowdb": "^1.0.11",
    "@types/sinon": "^10.0.13",
    "rimraf": "^4.1.1",
    "sinon": "^15.0.1"
  }
}
