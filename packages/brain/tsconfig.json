{
  "extends": "../../tsconfig.json",
  "include": ["src"],
  "exclude": ["./tests/", "./node_modules/", "./dist/"],
  "compilerOptions": {
    "outDir": "dist",
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "useUnknownInCatchVariables": false
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "experimentalResolver": true
  }
}
